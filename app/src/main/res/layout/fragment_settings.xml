<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/adMobButton"
            style="@style/SettingsButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="?selectableItemBackground"
            android:text="@string/admob_button"
            app:layout_constraintBottom_toBottomOf="@+id/resetButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/close"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_wifi_protected_setup_24"
            app:layout_constraintEnd_toStartOf="@+id/closeButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/close"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closeButton">

            <TextView
                android:text="@string/settings_close_button"
                android:textSize="12sp" />

            <Button
                android:id="@+id/closeImmediatelyButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_close_immediately" />

            <Button
                android:id="@+id/closeDelayedButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_close_delay" />

            <Button
                android:id="@+id/closeHiddenButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_close_hidden" />

            <TextView
                android:text="@string/settings_bumper"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bumperEnableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_enable" />

            <Button
                android:id="@+id/bumperDisableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="@string/settings_disable" />

            <TextView
                android:text="@string/settings_parental"
                android:textSize="12sp" />

            <Button
                android:id="@+id/parentalEnableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_enable" />

            <Button
                android:id="@+id/parentalDisableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="@string/settings_disable" />

            <TextView
                android:text="@string/settings_playback"
                android:textSize="12sp" />

            <Button
                android:id="@+id/playbackEnableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_enable" />

            <Button
                android:id="@+id/playbackDisableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="@string/settings_disable" />

            <TextView
                android:text="@string/settings_mute"
                android:textSize="12sp" />

            <Button
                android:id="@+id/muteEnableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_enable" />

            <Button
                android:id="@+id/muteDisableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="@string/settings_disable" />

            <TextView
                android:text="@string/settings_video_warn_dialog"
                android:textSize="12sp" />

            <Button
                android:id="@+id/videoCloseDialogEnableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_enable" />

            <Button
                android:id="@+id/videoCloseDialogDisableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="@string/settings_disable" />

            <TextView
                android:text="@string/settings_close_end"
                android:textSize="12sp" />

            <Button
                android:id="@+id/videoCloseAtEndEnableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_enable" />

            <Button
                android:id="@+id/videoCloseAtEndDisableButton"
                style="@style/SettingsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="@string/settings_disable" />
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
